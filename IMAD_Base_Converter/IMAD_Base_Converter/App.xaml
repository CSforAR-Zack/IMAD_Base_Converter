<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:IMAD_Base_Converter"
             x:Class="IMAD_Base_Converter.App">
    <Application.Resources>
        <Color x:Key="Primary">#062c30</Color>
        <Color x:Key="Secondary">#05595b</Color>
        <Color x:Key="Accent">#e2d784</Color>
        <Color x:Key="LabelText">#f5f5f5</Color>

        <Style TargetType="RadioButton">
            <Setter Property="BackgroundColor" Value="{StaticResource Secondary}"/>
            <Setter Property="TextColor" Value="{StaticResource LabelText}"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="TextColor" Value="{StaticResource LabelText}"/>
        </Style>
    </Application.Resources>
</Application>
